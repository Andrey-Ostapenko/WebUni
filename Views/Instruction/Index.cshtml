@using livemenu.Helpers
@using livemenu.Kernel.Executing
@{
    ViewBag.Title = "Index";
    Layout = Request.GetLayout(MVC.Shared.Views._NavigationLayout, "#main-region");

    var urlpart = string.Empty;
    switch (Model)
    {
        case LMExecutingType.LM:
            {
                urlpart = "platform-profile";
                break;
            }
        case LMExecutingType.CMS:
            {
                urlpart = "platform-cms";
                break;
            }
        case LMExecutingType.Projects:
            {
                urlpart = "platform-projects";
                break;
            }
        case LMExecutingType.CRM:
            {
                urlpart = "platform-crm";
                break;
            }
        case LMExecutingType.Cloud:
            {
                urlpart = "platform-cloud";
                break;
            }
        case LMExecutingType.Communications:
            {
                urlpart = "platform-communication";
                break;
            }
        case LMExecutingType.Market:
            {
                urlpart = "platform-market";
                break;
            }
        case LMExecutingType.Partner:
            {
                urlpart = "platform-partners";
                break;
            }
        case LMExecutingType.Settings:
            {
                urlpart = "platform-settings";
                break;
            }
        case LMExecutingType.Support:
            {
                urlpart = "platform";
                break;
            }
        case LMExecutingType.Team:
            {
                urlpart = "platform-team";
                break;
            }
        case LMExecutingType.Transit:
        {
            urlpart = "platform-transit";
            break;

        }
        case LMExecutingType.WMS:
        {
            urlpart = "platform-wms";
            break;
        }
    }

    var url = string.Format("http://www.WebUni.ru/{0}?f&nomenu", urlpart);

}

@model livemenu.Kernel.Executing.LMExecutingType

<div class="row">
    <div class="col-md-12 sm-no-padding">
        <div class="panel panel-transparent">
            <div class="panel-body no-padding">
                <div id="instruction-portlet" class="panel panel-default" style="top: 0 !important; left: 0 !important;">
                    <div class="panel-heading ">
                        <div class="panel-title">
                            Инструкция
                        </div>
                        <div class="panel-controls">
                            <ul>
                                <li>
                                    <a href="#" class="portlet-maximize" data-toggle="maximize"><i class="fa fa-arrows-alt pg-fullscreen"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        <iframe src="@url" width="100%" height="800px"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $('#instruction-portlet').portlet({
        progress: 'circle',
        onRefresh: function () {

        }
    });

</script>