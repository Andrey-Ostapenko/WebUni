@{
    Layout = null;
    var license = Microsoft.Practices.ServiceLocation.ServiceLocator.Current.GetInstance<ILicenseInfoService>().GetLicense();

    var et = ServiceLocator.Current.GetInstance<ILMExecutingContext>().ExecutingType;
    var urlpart = string.Empty;
    switch (et)
    {
        case LMExecutingType.LM:
            {
                urlpart = "http://www.WebUni.ru/platform-profile";
                break;
            }
        case LMExecutingType.CMS:
            {
                urlpart = "http://www.WebUni.ru/platform-cms";
                break;
            }
        case LMExecutingType.Projects:
            {
                urlpart = "http://www.WebUni.ru/platform-projects";
                break;
            }
        case LMExecutingType.CRM:
            {
                urlpart = "http://www.WebUni.ru/platform-crm";
                break;
            }
        case LMExecutingType.Cloud:
            {
                urlpart = "http://www.WebUni.ru/platform-cloud";
                break;
            }
        case LMExecutingType.Communications:
            {
                urlpart = "http://www.WebUni.ru/platform-communication";
                break;
            }
        case LMExecutingType.Market:
            {
                urlpart = "http://www.WebUni.ru/platform-market";
                break;
            }
        case LMExecutingType.Partner:
            {
                urlpart = "http://www.WebUni.ru/platform-partners";
                break;
            }
        case LMExecutingType.Settings:
            {
                urlpart = "http://www.WebUni.ru/platform-settings";
                break;
            }
        case LMExecutingType.Support:
            {
                urlpart = "platform";
                break;
            }
        case LMExecutingType.Team:
            {
                urlpart = "http://www.WebUni.ru/platform-team";
                break;
            }
        case LMExecutingType.Transit:
            {
                urlpart = "http://www.WebUni.ru/platform-transit";
                break;

            }
        case LMExecutingType.WMS:
            {
                urlpart = "http://www.WebUni.ru/platform-wms";
                break;
            }
        default:
        {
            urlpart = "http://www.WebUni.ru/platform";
            break;
        }
    }

    var url = urlpart;
    }



    @using livemenu.Kernel.Authentication
    @using livemenu.Kernel.Executing
    @using livemenu.Kernel.Management
    @using Microsoft.Practices.ServiceLocation
    @model livemenu.Models.Home.HeaderModel

      <!-- START HEADER -->
    <div class="header ">

    <div class="pull-left full-height visible-sm visible-xs">
        <!-- START ACTION BAR -->
        <div class="sm-action-bar">
            <a href="#" class="btn-link toggle-sidebar" data-toggle="sidebar">
                <span class="icon-set menu-hambuger"></span>
            </a>
        </div>
        <!-- END ACTION BAR -->
    </div>

  
<style>
    .subsystem li {
        margin-bottom: 10px
    }
    .subsystem  img {
        background-color: white;
    }

    .subsystem li:hover  img {
        background-color: rgb(230,230,230);
    }
</style>
    <div class=" pull-left sm-table">
        <div class="header-inner">
            <div class="brand inline" style="">
            </div>
          
            <ul class="notification-list no-margin hidden-sm hidden-xs b-grey b-l b-r no-style p-l-30 p-r-20" style='padding-right: 4px!important;'>

                <li class="p-r-15 inline">
                    <a data-target="#mainmenumodal" class="search-link" data-toggle="modal" id="mainmenumodal_btn"><i class="fa fa-th-large"></i> Меню</a>
                    @*<a href="#"><i class="fa fa-th-large"></i></a>*@
                </li>
            </ul>
            <a href="@url" target="_blank" class="search-link" >Инструкция</a>

            <a data-target="#screensettingsmodal" class="search-link" data-toggle="modal" id="screensettingsmodal_btn" style="cursor:pointer;"> Экран</a>

            <script>
                if (window.location.pathname.indexOf('/Catalog') > -1) {
                    $('#screensettingsmodal_btn').show();
                } else {
                    $('#screensettingsmodal_btn').hide();
                }
            </script>

        </div>
    </div>

    <div class=" pull-right">
        <div class="visible-lg visible-md m-t-10">
            <div class="pull-left p-r-10 p-t-10 fs-16 font-heading">
                <div class="dropdown pull-right">
                    <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @{
                            var lastName = !string.IsNullOrEmpty(Model.Account.LastName) ? Model.Account.LastName : string.Empty;

                        }
                        <span class="semi-bold p-r-10 p-t-10 fs-16 font-heading">@Model.Account.FirstName <span> </span>@lastName</span>
                    </button>
                    <ul class="dropdown-menu profile-dropdown" role="menu">
                        @if (license.ShowAllSubsystems)
                        {
                            <li>
                                <a href="@Url.Action(MVC.Account.Index())" class="clearfix">
                                    <span class="pull-left">Профиль</span>
                                    <span class="pull-right"><i class="fa fa-cog"></i></span>
                                </a>
                            </li>
                        }
                        <li class="bg-master-lighter">
                            <a href="@Url.Action(MVC.Login.LogOut())" class="clearfix">
                                <span class="pull-left">Выйти</span>
                                <span class="pull-right"><i class="fa fa-sign-out"></i></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            

        </div>
    </div>
   
</div>
<!-- END HEADER -->
