@using livemenu.DAL
@using livemenu.Helpers
@using livemenu.Kernel.Catalog
@using Microsoft.Practices.ServiceLocation

@{
    ViewBag.Title = "Index";
    Layout = Request.GetLayout(MVC.Shared.Views._NavigationLayout, "#main-region");

}

<style>
    a, a:focus, a:hover, a:active {
        color: initial;
    }

    @@media (max-width: 767px) {
        .jumbotron, .container-fluid {
            padding-left: 10px !important;
            padding-right: 10px !important;
        }
    }
</style>

<div id="dash" class="panel-projects">

    <div class="container-fluid ">
        <div class="panel panel-transparent">
            <div class="panel-body sortable">

                <div class="row grid-stack">
                    <div class="grid-stack-item "
                         data-custom-id="grid-stack-item-sitebuilder"
                         data-gs-no-resize="true"
                         data-gs-x="0" data-gs-y="0"
                         data-gs-width="4" data-gs-height="4">
                        <div id="sitebuilder" class="panel panel-default WebUni-panel  grid-stack-item-content">
                            <a href="@Url.Action(MVC.Projects.Home.LaunchProject())" >
                                <img src="/Admin/Content/Images/Panels/projects/project-launch.png">
                                <div class="WebUni-panel-name">Запустить проект</div>
                                <div class="WebUni-panel-description">конфигуратор</div>
                            </a>
                        </div>
                    </div>

                    <div class="grid-stack-item"
                         data-custom-id="grid-stack-item-catalog"
                         data-gs-no-resize="true"
                         data-gs-x="4" data-gs-y="0"
                         data-gs-width="4" data-gs-height="4">
                        <div id="catalog" class="panel panel-default WebUni-panel  grid-stack-item-content">
                            <a href="@Url.Action(MVC.Projects.Home.Catalog())">
                                <img src="/Admin/Content/Images/Panels/projects/app-projects-grey.png">
                                <div class="WebUni-panel-name">Проекты</div>
                                <div class="WebUni-panel-description">приложение</div>
                            </a>
                        </div>
                    </div>


                    <div class="grid-stack-item"
                         data-custom-id="grid-stack-item-catalog-pass"
                         data-gs-no-resize="true"
                         data-gs-x="9" data-gs-y="0"
                         data-gs-width="4" data-gs-height="4">
                        <div id="pass" class="panel panel-default WebUni-panel  grid-stack-item-content">
                            <a href="@Url.Action(MVC.Projects.Users.Roles())">
                                <img src="/Admin/Content/Images/Panels/projects/roles.png">
                                <div class="WebUni-panel-name">Роли</div>
                                <div class="WebUni-panel-description">аудитория</div>
                            </a>
                        </div>
                    </div>


                    <div class="grid-stack-item"
                         data-custom-id="grid-stack-item-catalog-status"
                         data-gs-no-resize="true"
                         data-gs-x="0" data-gs-y="5"
                         data-gs-width="4" data-gs-height="4">
                        <div id="status" class="panel panel-default WebUni-panel  grid-stack-item-content">
                            <a href="@Url.Action(MVC.Projects.Users.Statuses())">
                                <img src="/Admin/Content/Images/Panels/projects/status.png">
                                <div class="WebUni-panel-name">Статусы</div>
                                <div class="WebUni-panel-description">аудитория</div>
                            </a>
                        </div>
                    </div>

                    <div class="grid-stack-item"
                         data-custom-id="grid-stack-item-catalog-db"
                         data-gs-no-resize="true"
                         data-gs-x="4" data-gs-y="5"
                         data-gs-width="4" data-gs-height="4">
                        <div id="db" class="panel panel-default WebUni-panel  grid-stack-item-content">
                            <a href="@Url.Action(MVC.Projects.DynamicTables.Index())">
                                <img src="/Admin/Content/Images/Panels/projects/database.png">
                                <div class="WebUni-panel-name">Таблицы</div>
                                <div class="WebUni-panel-description">база данных</div>
                            </a>
                        </div>
                    </div>

                    <div class="grid-stack-item"
                         data-custom-id="grid-stack-item-catalog-codes"
                         data-gs-no-resize="true"
                         data-gs-x="9" data-gs-y="5"
                         data-gs-width="4" data-gs-height="4">
                        <div id="codes" class="panel panel-default WebUni-panel  grid-stack-item-content">
                            <a href="@Url.Action(MVC.Projects.DynamicColumnCode.Index())">
                                <img src="/Admin/Content/Images/Panels/projects/codes.png">
                                <div class="WebUni-panel-name">Коды</div>
                                <div class="WebUni-panel-description">база данных</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    var options = {
        min_width: 0,
        cell_height: 40,
        vertical_margin: 20,

    };
    var name = "WebUni-projects-panel";
    $('.grid-stack').gridstack(options);

    $('.grid-stack').on('dragstop', function (event, ui) {
        panelSaveGridData(name);
    });

    $('.grid-stack').on('resizestop', function (event, ui) {
        panelSaveGridData(name);
    });

    var saved = $.cookie(name);
    if (saved) {
        panelLoadGridData(jQuery.parseJSON(saved));
    }

</script>