@{
    Layout = null;
    var title = Model.IsNew ? "Создание счетчика" : "Редактирование счетчика";
}

@model livemenu.Common.Entities.Entities.WebCounter 


<div class="row" style="margin-top: 0px">
    <div class="col-sm-12 col-md-12">
        <div style="border-bottom: 1px solid #ddd; padding-bottom: 10px;">
            <div class="btn-group">
                <button type="button" class="btn btn-default widget-back-btn " onclick="webcounterCardGoBack()">

                    <i class="fa fa-reply"></i>
                </button>

                <a class="btn btn-success widget-save-btn"  onclick="$('#WebCounterCard').find('form').submit()">
                    <i class="fa fa-check"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-12  p-t-20">
        @{
            ViewContext.Writer.Write("<div id='WebCounterCard'>");
            Html.RenderPartial(MVC.CMS.WebCounters.Views.WebCountersCard, Model);
            ViewContext.Writer.Write("</div>");
        }
    </div>
</div>